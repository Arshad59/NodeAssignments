<div id="updateModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <span class="modal-close" onclick="closeModal()">&times;</span>
            <h2>Update Employee</h2>
        </div>
        <form id="updateForm" action="http://localhost:8000/web/employees/update" method="POST">
            <input type="hidden" name="id" id="empId">
            <label for="firstName">First Name:</label>
            <input type="text" name="first_name" id="firstName" required>
            <br><br>
            <label for="lastName">Last Name:</label>
            <input type="text" name="last_name" id="lastName" required>
            <br><br>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" required>
            <br><br>
            <label for="carModel">Car Model</label>
            <input type="text" name="car_model" id="carModel">
            <br><br>
            <button type="submit">Update</button>
        </form>
    </div>
</div>
<script>
    function openModal(id, firstName, lastName, email, carModel) {
        document.getElementById('empId').value = id;
        document.getElementById('firstName').value = firstName;
        document.getElementById('lastName').value = lastName;
        document.getElementById('email').value = email;
        document.getElementById("carModel").value = carModel;
        document.getElementById('updateModal').style.display = 'flex';
    }

    function closeModal() {
        document.getElementById('updateModal').style.display = 'none';
    }

    window.onclick = function (event) {
        const modal = document.getElementById('updateModal');
        if (event.target === modal) {
            modal.style.display = 'none';
        }
    }
</script>
<style>
    /* Modal styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 100;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        width: 400px;
        max-width: 90%;
    }

    .modal-header h2 {
        margin: 0;
    }

    .modal-close {
        float: right;
        cursor: pointer;
    }
</style>